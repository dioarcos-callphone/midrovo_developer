<odoo>
    <record id="product_catalog_view_tree" model="ir.ui.view">
        <field name="name">product.catalog.view.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//tree/header" position="inside">
                <button name="action_product_catalog_pdf"
                        string="CATALOGO DE PRODUCTOS"
                        type="object"
                        class="btn btn-pdf"
                        icon="fa-file-pdf"/>
            </xpath>
        </field>
    </record>
</odoo>