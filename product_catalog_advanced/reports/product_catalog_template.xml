<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="report_product_catalog">
        <t t-call="web.html_container">
            <t t-foreach="options" t-as="producto">
                <div class="page">
                    <h2 style="text-align: center;">Cat√°logo de Productos</h2>
                    <div style="display: flex; margin: 20px 0;">
                        <!-- Nombre del producto -->
                        <h3 style="flex: 1; text-align: center;"><t t-esc="producto['name']"/></h3>
                    </div>
                    <t t-foreach="producto['colores']" t-as="color">
                        <div style="margin-bottom: 20px; display: flex;">
                            <!-- Imagen del color -->
                            <div style="flex: 1; text-align: center; margin-right: 20px;">
                                <t t-if="color['image']">
                                    <img t-att-src="'data:image/png;base64,' + color['image']"
                                         alt="Imagen del producto"
                                         style="max-width: 150px; max-height: 150px;"/>
                                </t>
                                <t t-else="">
                                    <img src="/product_catalog_advanced/static/src/img/placeholder.png"
                                         alt="Imagen no disponible"
                                         style="max-width: 150px; max-height: 150px;"/>
                                </t>
                            </div>

                            <!-- Tabla de Tallas y Cantidades -->
                            <div style="flex: 1;">
                                <table style="border-collapse: collapse; width: 100%;">
                                    <thead>
                                        <tr>
                                            <t t-foreach="color['tallas']" t-as="talla">
                                                <th style="border: 1px solid #000; padding: 8px; text-align: center;">
                                                    <t t-esc="talla['talla']"/>
                                                </th>
                                            </t>
                                            <th style="border: 1px solid #000; padding: 8px; text-align: center;">
                                                Cantidad
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <t t-foreach="color['tallas']" t-as="talla">
                                                <td style="border: 1px solid #000; padding: 8px; text-align: center;">
                                                    <t t-esc="talla['cantidad']"/>
                                                </td>
                                            </t>
                                            <td style="border: 1px solid #000; padding: 8px; text-align: center;">
                                                <t t-esc="sum([talla['cantidad'] for talla in color['tallas']])"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
