<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
    
        <record id="account_move_inherit_form" model="ir.ui.view">
            <field name="name">account.move.inherit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='analytic_distribution']" position="replace">
                    <field  name="analytic_distribution" widget="analytic_distribution"
                            context="{'default_analytic_distribution': { str(move_id.journal_id.analytic_id.id): 100 }, }"
                            groups="analytic.group_analytic_accounting"
                            optional="show"
                            options="{'product_field': 'product_id', 'account_field': 'account_id'}"
                            business_domain_compute="parent.move_type in ['out_invoice', 'out_refund', 'out_receipt'] and 'invoice' or parent.move_type in ['in_invoice', 'in_refund', 'in_receipt'] and 'bill' or 'general'"/>
                </xpath>
            </field>
        </record>
    
    </data>
    
</odoo>