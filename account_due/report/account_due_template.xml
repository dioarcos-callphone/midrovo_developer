<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <template id="report_account_due">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page" style="margin: 0; padding: 0;">
                    <div class="text-center">
                        <h4>Cuentas Vencidas por Cobrar</h4>    
                    </div>
                </div>
                <table class="table table-condensed table-bordered table-striped" style="margin-top: 20px;">
                    <thead>
                        <tr>
                            <th align="center" style="vertical-align: middle; font-size: 13px;">Vencido por Cobrar</th>
                            <th align="center" style="vertical-align: middle; font-size: 13px;">Fecha de Vencimiento</th>
                            <th align="center" style="vertical-align: middle; font-size: 13px;">Importe en Moneda</th>
                            <!-- <th align="center" style="vertical-align: middle; font-size: 13px;">Fecha Prevista</th> -->
                            <th align="center" style="vertical-align: middle; font-size: 13px;">En Fecha</th>
                            <th align="center" style="vertical-align: middle; font-size: 13px;" width="100">1 - 30</th>
                            <th align="center" style="vertical-align: middle; font-size: 13px;" width="100">31 - 60</th>
                            <th align="center" style="vertical-align: middle; font-size: 13px;" width="100">61 - 90</th>
                            <th align="center" style="vertical-align: middle; font-size: 13px;" width="100">91 - 120</th>
                            <th align="center" style="vertical-align: middle; font-size: 13px;">MÃ¡s Antiguos</th>
                            <th align="center" style="vertical-align: middle; font-size: 13px;">Total</th>                            
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="options" t-as="result">
                            <td>
                                <t t-esc="result.get('invoice')"/>
                            </td>
                            <td>
                                <t t-esc="result.get('date_due')"/>
                            </td>
                            <td t-att-class="result.get('amount_residual', 0) < 0 and 'text-danger'">
                                <t t-esc="result.get('amount_residual')"/>
                            </td>
                            <!-- <td>
                                <t t-esc="result['comercial']"/>
                            </td> -->
                            <td t-att-class="result.get('actual', 0) < 0 and 'text-danger'">
                                <t t-esc="result.get('actual', '')"/>
                            </td>
                            <td t-att-class="result.get('1 - 30', 0) < 0 and 'text-danger'">
                                <t t-esc="result.get('1 - 30', '')"/>
                            </td>
                            <td t-att-class="result.get('31 - 60', 0) < 0 and 'text-danger'">
                                <t t-esc="result.get('31 - 60', '')"/>
                            </td>
                            <td t-att-class="result.get('61 - 90', 0) < 0 and 'text-danger'">
                                <t t-esc="result.get('61 - 90', '')"/>
                            </td>
                            <td t-att-class="result.get('91 - 120', 0) < 0 and 'text-danger'">
                                <t t-esc="result.get('91 - 120', '')"/>
                            </td>
                            <td t-att-class="result.get('antiguo', 0) < 0 and 'text-danger'">
                                <t t-esc="result.get('antiguo', '')"/>
                            </td>
                            <td>
                                0
                            </td>                          
                        </tr>
                    </tbody>              
                </table>
            </t>
        </t>
    </template>

</odoo>