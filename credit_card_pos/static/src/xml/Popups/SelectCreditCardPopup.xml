<templates>
    <t t-name="credit_card_pos.SelectCreditCardPopup">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><t t-esc="props.title"/></h5>
                    <button type="button" class="close" aria-label="Close" t-on-click="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <ul>
                        <t t-foreach="cardList" t-as="card">
                            <li t-on-click="selectCard(card)">
                                <t t-esc="card"/>
                            </li>
                        </t>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" t-on-click="close">Cancelar</button>
                    <button type="button" class="btn btn-primary" t-on-click="confirm">Confirmar</button>
                </div>
            </div>
        </div>
    </t>
</templates>
