<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="template_update_catalog" inherit_id="amf_product_catalog.report_product_catalog">
        <xpath expr="//div[@class='page']" position="replace">
            <div class="page">
                <article class="product-article">
                    <div style="border:none;">
                        <h2 t-field="o.name"/>
                    </div>
                    <table class=".no-border" style="border:none;">
                        <tr style="border:none;">
                            <td style="border:none;">
                                <span t-field="o.image_1920"
                                    t-options='{"widget": "image", "class": "img-size" }'/>
                            </td>
                            <td style="border:none;">
                                <span>MOSTRANDO PRODUCTO</span>
                            </td>
                        </tr>
                    </table>
                </article>
            </div>            
        </xpath>
    </template>
</odoo>