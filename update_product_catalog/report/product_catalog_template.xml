<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="template_update_catalog" inherit_id="amf_product_catalog.report_product_catalog">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <header class="title">
                            <div>
                                <h3 t-field="o.name"/>
                            </div>
                        </header>
                        <article class="product-article">
                            <table class="no-border">
                                <tr>
                                    <td class="column-img">
                                        <span t-field="o.image_1920"
                                              t-options='{"widget": "image", "class": "img-size" }'/>
                                    </td>
                                    <td class="column-variants">
                                        <div class="variants">
                                            <t t-if="doc_model == 'product.product'">
                                                <t t-set="variant_names" t-value="', '.join(o.product_template_variant_value_ids.mapped('name'))"/>
                                                <t t-if="variant_names">
                                                    <br/>
                                                    (<span t-out="variant_names"/>)
                                                </t>
                                            </t>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </article>
                    </div>
                </t>
            </t>          
        </xpath>
    </template>
</odoo>