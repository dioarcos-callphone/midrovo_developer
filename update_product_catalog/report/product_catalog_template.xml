<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="template_update_catalog" inherit_id="amf_product_catalog.report_product_catalog">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <style>
                .page {
                    margin: 0 !important;
                    padding: 0 !important;
                }

                .title {
                    margin: 0 !important;
                    padding-bottom: 5px !important;
                    text-align: center;
                }

                .product-article {
                    margin: 10px 0 !important;
                    padding: 10px 7px !important;
                }

                .no-border, .no-border-variants {
                    border: none !important;
                    border: transparent !important;
                    border-collapse: collapse;
                    width: 100%;
                    height: 50%;
                }

                .no-border td {
                    vertical-align: top;
                    border: none !important;
                }

                .no-border-variants td {
                    vertical-align: middle;
                    border: none !important;
                }

                .img-size {
                    width: 220px;
                    height: 220px;
                }

                .column-variants {
                    width: 70%;
                }

                .variants, .no-variants {
                    text-align: center;
                }

                .table-variants {
                    float: right;
                    width: 80%;
                    border-collapse: collapse;
                }

                .head-variants {
                    float: right;
                    margin-bottom: 5px;
                    border: none !important;
                    border: transparent !important;
                    width: 40%;
                    border-collapse: collapse;
                    text-align: right;
                    padding: 10px 5px !important;
                }

                .head-no-variants {
                    margin: auto;
                    border: none !important;
                    border: transparent !important;
                    width: 50%;
                    border-collapse: collapse;
                    padding: 10px 5px !important;
                }

                .table-variants thead {
                    border: 1px solid #2196f3 !important;
                }

                .table-variants th, .table-variants td {
                    border: 1px solid #2196f3 !important;
                    padding: 8px !important;
                    /* text-align: right; */
                }

                .table-variants th {
                    font-weight: 500;
                    background-color: #f2f2f2;
                }
            </style>
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <header class="title">
                            <div>
                                <h3 t-field="o.name"/>
                            </div>
                        </header>
                        <t t-if="o._get_data_product_variants()">
                            <t t-foreach="o._get_data_product_variants()" t-as="result">
                                <article class="product-article">
                                    <table class="no-border">
                                        <tr>
                                            <td class="column-img">
                                                <span t-field="env['product.product'].search([('id','=',result['img'])]).image_1920"
                                                        t-options='{"widget": "image", "class": "img-size" }'></span>
                                            </td>
                                            <td class="column-variants">
                                                <div class="variants">
                                                    <table class="head-variants">
                                                        <tr>
                                                            <td class="title-head">
                                                                <strong>Color:</strong>
                                                            </td>
                                                            <td>
                                                                <span t-esc="result['color'].upper()"/>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                    <table class="table-variants">
                                                        <thead>
                                                            <tr>
                                                                <t t-foreach="result['tallas']" t-as="talla">
                                                                    <t t-if="talla.product_template_variant_value_ids">
                                                                        <t t-foreach="talla.product_template_variant_value_ids" t-as="variant_value">
                                                                            <t t-if="variant_value.attribute_id.name.lower() == 'tallas' or variant_value.attribute_id.name.lower() == 'talla'">
                                                                                <th>
                                                                                    <span t-esc="variant_value.name"/>
                                                                                </th>
                                                                            </t>
                                                                            <t t-if="len(result['talla_unica']) == 1">
                                                                                <t t-foreach="result['talla_unica']" t-as="t">
                                                                                    <th>
                                                                                        <span t-esc="t"/>
                                                                                    </th>
                                                                                </t>
                                                                            </t>
                                                                        </t>
                                                                    </t>
                                                                    <t t-else="">
                                                                        <t t-foreach="result['talla_unica']" t-as="t">
                                                                            <th>
                                                                                <span t-esc="t"/>
                                                                            </th>
                                                                        </t>
                                                                    </t>
                                                                    
                                                                </t>
                                                                <th>
                                                                    <span>Pares</span>
                                                                </th>
                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                            <tr>
                                                                <t t-foreach="result['tallas']" t-as="talla">
                                                                    <td>
                                                                        <span t-esc="int(talla.immediately_usable_qty)"/>
                                                                    </td>
                                                                </t>
                                                                <td>
                                                                    <span t-esc="result['disponible']"/>
                                                                </td>                                                        </tr>
                                                        </tbody>
                                                    </table>                        
                                                </div> 
                                            </td>
                                        </tr>
                                    </table>
                                </article>
                            </t>
                        </t>
                        <t t-else="">
                            <article class="product-article">
                                <table class="no-border-variants">
                                    <tr>
                                        <td class="column-img">
                                            <span t-field="o.image_1920"
                                                    t-options='{"widget": "image", "class": "img-size" }'></span>
                                        </td>
                                        <td class="column-variants">
                                            <div class="no-variants">
                                                <table class="head-no-variants">
                                                    <tr>
                                                        <td class="title-head">
                                                            <h2>Disponible:</h2>
                                                        </td>
                                                        <td>
                                                            <h2 t-esc="int(o.immediately_usable_qty)"/>
                                                        </td>
                                                    </tr>
                                                </table>                       
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </article>
                        </t> 
                    </div>
                </t>
            </t>          
        </xpath>
    </template>
</odoo>