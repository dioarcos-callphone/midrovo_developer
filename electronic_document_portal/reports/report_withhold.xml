<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <template id="report_withhold_document_extend" name="Invoice Document" inherit_id="ec_account_edi.report_e_retention_qweb">
            <xpath expr="//span[@t-esc='abs(line.retained_value)']" position="replace">
                <span t-esc="abs(line.retained_value)" t-options='{"widget": "monetary", "display_currency": env.company.currency_id}'/>
            </xpath>
            <xpath expr="//span[@t-esc='abs(document.total_iva)']" position="replace">
                <span t-esc="abs(document.total_iva)" t-options='{"widget": "monetary", "display_currency": env.company.currency_id}'/>
            </xpath>
            <xpath expr="//span[@t-esc='abs(document.total_renta)']" position="replace">
                <span t-esc="abs(document.total_renta)" t-options='{"widget": "monetary", "display_currency": env.company.currency_id}'/>
            </xpath>
            <xpath expr="//span[@t-esc='abs(document.total)" position="replace">
                <span t-esc="abs(document.total)" t-options='{"widget": "monetary", "display_currency": env.company.currency_id}'/>
            </xpath>
        </template>
    </data>
</odoo>