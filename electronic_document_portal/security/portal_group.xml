<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="portal_web_category" model="ir.module.category">
            <field name="name">Portal Web Documentos Electrónicos</field>
            <field name="description">Grupo de acceso a documentos electrónicos en el portal web.</field>
            <field name="sequence">0</field>
        </record>

        <record id="portal_user_internal_group" model="res.groups">
            <field name="name">Imprimir y enviar documentos</field>
            <field name="comment">Acceso para imprimir y enviar documentos a través del módulo de contabilidad.</field>
            <field name="category_id" ref="portal_web_category"/>
        </record>

        <record id="portal_user_internal_group_nodelete" model="res.groups">
            <field name="name">No eliminar documentos</field>
            <field name="comment">Restricción para eliminar documentos electrónicos.</field>
            <field name="category_id" ref="portal_web_category"/>
        </record>

        <record id="portal_user_internal_group_posted" model="res.groups">
            <field name="name">Eliminar documentos publicados</field>
            <field name="comment">Acceso para eliminar documentos electrónicos ya publicados.</field>
            <field name="category_id" ref="portal_web_category"/>
        </record>
    
    </data>
    

</odoo>
