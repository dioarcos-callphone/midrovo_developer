<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- R E T E N C I O N E S -->
    <template id="portal_my_home_menu_retention" name="Portal layout : retention menu entries" inherit_id="portal.portal_breadcrumbs" priority="30">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'retention'" t-attf-class="breadcrumb-item #{'active ' if not retention else ''}">
                <a t-if="retention" t-attf-href="/my/retentions?{{ keep_query() }}">Retenciones</a>
                <t t-else="">Retenciones</t>
            </li>
            <li t-if="retention" class="breadcrumb-item active">
                <span t-if="retention.l10n_latam_document_number != '/'">Ret.</span> <t t-out="retention.l10n_latam_document_number" t-if="retention.l10n_latam_document_number != '/'"/>
                <t t-else=""><em>Borrador de Retención</em></t>
            </li>
        </xpath>
    </template>

    <template id="portal_my_retentions" name="Mis Retenciones">
      <t t-call="portal.portal_layout">
        <t t-set="breadcrumbs_searchbar" t-value="True"/>

        <t t-call="portal.portal_searchbar">
            <t t-set="title">Retenciones</t>
        </t>
        <t t-if="not retentions">
             <div class="alert alert-info text-center" style="margin: 20px; padding: 15px; border-radius: 10px;">
                <i class="fa fa-info-circle" style="font-size: 24px; margin-bottom: 10px;"></i>
                <h4>No hay retenciones disponibles</h4>
                <p>Parece que no tienes retenciones asociadas a tu cuenta en este momento.</p>
                <a href="/my/home" class="btn btn-primary" style="margin-top: 10px;">Volver al Panel</a>
            </div>
            <!-- <p style="margin:7px 10px; padding:5px;">Actualmente no hay notas de crédito para su cuenta.</p> -->
        </t>
        <t t-if="retentions" t-call="portal.portal_table">
            <thead>
                <tr class="active">
                    <th>Retención #</th>
                    <th>Cliente</th>
                    <th class="text-end">F. Emisión</th>
                    <th class="text-center">Factura</th>
                    <th class="text-center">Envío Email</th>
                    <th class="text-center">Autorización</th>
                    <th class="text-end">Ret. IVA</th>
                    <th class="text-end">Ret. RENTA</th>
                    <th class="text-end">Total</th>
                    <th class="text-center"><span class="fa fa-download fa-lg"></span></th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="retentions" t-as="retention">
                    <tr>
                        <td>
                            <a t-att-href="retention.get_portal_url()" t-att-title="retention.l10n_latam_document_number">
                                <span t-if="retention.l10n_latam_document_number != '/'">Ret.</span> <t t-out="retention.l10n_latam_document_number" t-if="retention.l10n_latam_document_number != '/'"/>
                                <em t-else="">Borrador de retenciones</em>
                            </a>
                        </td>
                        <td><span t-esc="retention.partner_id.name.title()"/></td>
                        <td class="text-end"><span t-field="retention.creation_date"/></td>
                        <t t-if="retention.invoice_id">
                            <td class="text-center"><span t-field="retention.invoice_id.name"/></td>
                        </t>
                        <t t-else="">
                            <td class="text-center"><span t-field="retention.factura_origen_api"/></td>
                        </t>
                        <td class="tx_status text-center">
                            <t t-call="electronic_document_portal.email_state_template">
                                <t t-set="is_sent" t-value="retention.xml_data_id.send_mail" />
                            </t>
                        </td>
                        <td class="tx_status text-center">
                            <t t-call="electronic_document_portal.sri_state_template">
                                <t t-set="state_sri" t-value="retention.state_sri"/>
                            </t>
                        </td>
                        <td class="text-end"><span t-esc="abs(retention.total_iva)" t-options='{"widget": "monetary", "display_currency": display_currency}' /></td>
                        <td class="text-end"><span t-esc="abs(retention.total_renta)" t-options='{"widget": "monetary", "display_currency": display_currency}' /></td>
                        <td class="text-end"><span t-esc="abs(retention.total)" t-options='{"widget": "monetary", "display_currency": display_currency}' /></td>
                        <td class="text-center">
                            <span class="pdf-icon" style="margin: 5px;">
                                <a class="fa fa-file-pdf-o fa-lg" t-att-href="retention.get_portal_url(report_type='pdf', download=True)" style="color: red; font-weight: bold;"></a>
                            </span>
                            <span class="xml-icon" style="margin: 5px;">
                                <a class="fa fa-file-code-o fa-lg" t-att-href="retention.get_portal_url(report_type='xml', download=True)" style="color: green; font-weight: bold;"></a>
                            </span>
                        </td>
                    </tr>
                </t>
            </tbody>
        </t>
      </t>
    </template>


    <template id="portal_retention_page" name="Retention Portal Template" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-set="o_portal_fullwidth_alert" groups="sales_team.group_sale_salesman,account.group_account_invoice,account.group_account_readonly">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (retention._name, retention.id, retention.env.ref('ec_withholding.action_account_retention_purchase').id)"/>
                </t>
            </t>

            <div class="row mt16 o_portal_invoice_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>
                    <t t-set="title">
                        <h2 class="mb-0">
                            <b t-if="retention.total != 0" t-esc="abs(retention.total)" t-options='{"widget": "monetary", "display_currency": display_currency}'/>
                        </h2>
                    </t>

                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group  flex-grow-1 me-1 mb-1">
                                        <a class="btn btn-danger btn-block o_download_btn" t-att-href="retention.get_portal_url(report_type='pdf', download=True)" title="RIDE"><i class="fa fa-download"/> RIDE</a>
                                    </div>
                                    <div class="btn-group  flex-grow-1 me-1 mb-1">
                                        <a class="btn btn-success btn-block o_download_btn" t-att-href="retention.get_portal_url(report_type='xml', download=True)" title="XML"><i class="fa fa-download"/> XML</a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print" t-att-href="retention.get_portal_url(report_type='pdf')" id="print_retention_report" title="Print" target="_blank"><i class="fa fa-print"/> Print</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>

                <!-- Page Content -->
                <div id="invoice_content" class="col-12 col-lg">
                    <t t-if="error or warning" t-call="account.portal_invoice_error"/>
                    <t t-if="success and (not error and not warning)" t-call="account.portal_invoice_success"/>

                    <div class="o_portal_html_view shadow p-3">
                        <div class="o_portal_html_loader text-center">
                            <i class="fa fa-circle-o-notch fa-spin fa-2x fa-fw text-black-50"></i>
                        </div>
                        <iframe id="invoice_html" class="mt8 mb8" width="100%" height="100%" frameborder="0" scrolling="no" t-att-src="retention.get_portal_url(report_type='html')"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
