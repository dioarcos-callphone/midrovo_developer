<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- G U I A S  D E  R E M I S I O N -->
    <template id="portal_my_home_menu_remissions" name="Portal layout : remissions menu entries" inherit_id="portal.portal_breadcrumbs" priority="30">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'remission'" t-attf-class="breadcrumb-item #{'active ' if not remission else ''}">
                <a t-if="remission" t-attf-href="/my/remissions?{{ keep_query() }}">Guías de Remisión</a>
                <t t-else="">Guías de Remisión</t>
            </li>
            <li t-if="remission" class="breadcrumb-item active">
                <span t-if="remission.document_number != '/'">Guía.</span> <t t-out="remission.document_number" t-if="remission.document_number != '/'"/>
                <t t-else=""><em>Borrador de Guía de Remisión</em></t>
            </li>
        </xpath>
    </template>

    <template id="portal_my_remissions" name="Mis Guias de Remisión">
      <t t-call="portal.portal_layout">
        <t t-set="breadcrumbs_searchbar" t-value="True"/>

        <t t-call="portal.portal_searchbar">
            <t t-set="title">Guías de remisión</t>
        </t>
        <t t-if="not remissions">
             <div class="alert alert-info text-center" style="margin: 20px; padding: 15px; border-radius: 10px;">
                <i class="fa fa-info-circle" style="font-size: 24px; margin-bottom: 10px;"></i>
                <h4>No hay guías de remisión disponibles</h4>
                <p>Parece que no tienes guías de remisión asociadas a tu cuenta en este momento.</p>
                <a href="/my/home" class="btn btn-primary" style="margin-top: 10px;">Volver al Panel</a>
            </div>
            <!-- <p style="margin:7px 10px; padding:5px;">Actualmente no hay notas de crédito para su cuenta.</p> -->
        </t>
        <t t-if="remissions" t-call="portal.portal_table">
            <thead>
                <tr class="active">
                    <th>Guía de remisión #</th>
                    <th class="text-center">Fecha inicio de traslado</th>
                    <th class='text-center d-none d-md-table-cell'>Fecha fin de traslado</th>
                    <th class="text-center">Dirección</th>
                    <th class="text-center">Transportista</th>
                    <th class="text-center">Tipo de traslado</th>
                    <th class="text-center">Estado de Envío</th>
                    <th class="text-center">Estado de Autorización</th>
                    <th class="text-center"><span class="fa fa-download fa-lg"></span></th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="remissions" t-as="remission">
                    <tr>
                        <td>
                            <a t-att-href="remission.get_portal_url()" t-att-title="remission.document_number">
                                <span t-if="remission.document_number != '/'">Guía.</span> <t t-out="remission.document_number" t-if="remission.document_number != '/'"/>
                                <em t-else="">Borrador de Guías de Remisión</em>
                            </a>
                        </td>
                        <td class="text-center"><span t-field="remission.delivery_date"/></td>
                        <td class='text-center d-none d-md-table-cell'><span t-field="remission.transfer_date"/></td>
                        <td class="text-center"><span t-field="remission.delivery_address"/></td>
                        <td class="text-center"><span t-field="remission.delivery_carrier"/></td>
                        <td class="text-center"><span t-field="remission.remision_type"/></td>
                        <td class="tx_status text-center">
                            <t t-call="electronic_document_portal.email_state_template">
                                <t t-set="is_sent" t-value="remission.is_move_sent" />
                            </t>
                        </td>
                        <td class="tx_status text-center">
                            <t t-call="electronic_document_portal.sri_state_template">
                                <t t-set="state_sri" t-value="remission.state_sri"/>
                            </t>
                        </td>
                        <td class="text-center">
                            <span class="pdf-icon" style="margin: 5px;">
                                <a class="fa fa-file-pdf-o fa-lg" t-att-href="remission.get_portal_url(report_type='pdf', download=True)" style="color: red; font-weight: bold;"></a>
                            </span>
                            <span class="xml-icon" style="margin: 5px;">
                                <a class="fa fa-file-code-o fa-lg" t-att-href="remission.get_portal_url(report_type='xml', download=True)" style="color: green; font-weight: bold;"></a>
                            </span>
                        </td>
                    </tr>
                </t>
            </tbody>
        </t>
      </t>
    </template>


    <template id="portal_remission_page" name="Retention Portal Template" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-set="o_portal_fullwidth_alert" groups="sales_team.group_sale_salesman,account.group_account_invoice,account.group_account_readonly">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (remission._name, remission.id, remission.env.ref('ec_remision.action_account_remision').id)"/>
                </t>
            </t>

            <div class="row mt16 o_portal_invoice_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>
                    <t t-set="title">
                        <h2 class="mb-0">
                            <!-- <b t-if="retention.total_renta != 0" t-field="retention.total_renta"/>
                            <b t-else="" t-field="retention.total_iva"/> -->
                            <b>MOSTRAR ALGO</b>
                        </h2>
                    </t>

                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group  flex-grow-1 me-1 mb-1">
                                        <a class="btn btn-danger btn-block o_download_btn" t-att-href="remission.get_portal_url(report_type='pdf', download=True)" title="RIDE"><i class="fa fa-download"/> RIDE</a>
                                    </div>
                                    <div class="btn-group  flex-grow-1 me-1 mb-1">
                                        <a class="btn btn-success btn-block o_download_btn" t-att-href="remission.get_portal_url(report_type='xml', download=True)" title="XML"><i class="fa fa-download"/> XML</a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print" t-att-href="remission.get_portal_url(report_type='pdf')" id="print_retention_report" title="Print" target="_blank"><i class="fa fa-print"/> Print</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>

                <!-- Page Content -->
                <div id="invoice_content" class="col-12 col-lg">
                    <t t-if="error or warning" t-call="account.portal_invoice_error"/>
                    <t t-if="success and (not error and not warning)" t-call="account.portal_invoice_success"/>

                    <div class="o_portal_html_view shadow p-3">
                        <div class="o_portal_html_loader text-center">
                            <i class="fa fa-circle-o-notch fa-spin fa-2x fa-fw text-black-50"></i>
                        </div>
                        <iframe id="invoice_html" class="mt8 mb8" width="100%" height="100%" frameborder="0" scrolling="no" t-att-src="remission.get_portal_url(report_type='html')"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
