<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- N O T A S  D E  C R E D I T O -->
    <template id="portal_my_refunds" name="Mis Notas de Crédito">
      <t t-call="portal.portal_layout">
        <t t-set="breadcrumbs_searchbar" t-value="True"/>

        <t t-call="portal.portal_searchbar">
            <t t-set="title">Notas de crédito</t>
        </t>
        <t t-if="not refunds">
             <div class="alert alert-info text-center" style="margin: 20px; padding: 15px; border-radius: 10px;">
                <i class="fa fa-info-circle" style="font-size: 24px; margin-bottom: 10px;"></i>
                <h4>No hay notas de crédito disponibles</h4>
                <p>Parece que no tienes notas de crédito asociadas a tu cuenta en este momento.</p>
                <a href="/my/home" class="btn btn-primary" style="margin-top: 10px;">Volver al Panel</a>
            </div>
        </t>
        <!-- <div class="d-none d-md-block"> -->
        <t t-if="refunds" t-call="portal.portal_table">
            <thead>
                <tr class="active">
                    <th>Nota de crédito #</th>
                    <th>Cliente</th>
                    <th class="text-start">F. Emisión</th>
                    <th class='text-start'>F. Venc.</th>
                    <th class="text-center">Envío Email</th>
                    <th class="text-center">Autorización</th>
                    <th class="text-end">Total</th>
                    <th class="text-center" title="Descargar PDF o XML"><span class="fa fa-download fa-lg"></span></th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="refunds" t-as="refund">
                    <tr>
                        <td class="number-mobile">
                            <a t-att-href="refund.get_portal_url()" t-att-title="refund.name">
                                <t t-out="refund.name" t-if="refund.name != '/'"/>
                                <em t-else="">Borrador de nota de crédito</em>
                            </a>
                        </td>
                        <td><span t-esc="refund.partner_id.name.title()"/></td>
                        <td class='teext-start'><span t-field="refund.invoice_date"/></td>
                        <td class='teext-start'><span t-field="refund.invoice_date_due"/></td>
                        <td class="tx_status text-center">
                            <t t-call="electronic_document_portal.email_state_template">
                                <t t-set="is_sent" t-value="refund.xml_data_id.send_mail" />
                            </t>
                        </td>
                        <td class="tx_status text-center">
                            <t t-call="electronic_document_portal.sri_state_template">
                                <t t-set="state_sri" t-value="refund.state_sri"/>
                            </t>
                        </td>
                        <td class="text-end"><span t-out="refund.amount_residual" t-options='{"widget": "monetary", "display_currency": refund.currency_id}'/></td>
                        <td class="text-center">
                            <span class="pdf-icon" style="margin: 5px;">
                                <a class="fa fa-file-pdf-o fa-lg" t-att-href="refund.get_portal_url(report_type='pdf', download=True)" style="color: red; font-weight: bold;"></a>
                            </span>
                            <!-- <span class="xml-icon" style="margin: 5px;">
                                <a class="fa fa-file-code-o fa-lg" t-att-href="refund.get_portal_url(report_type='xml', download=True)" style="color: green; font-weight: bold;"></a>
                            </span> -->
                            <span class="xml-icon" style="margin: 5px;">
                                <t t-if="refund.xml_authorized">
                                    <a class="fa fa-file-code-o fa-lg"
                                    t-att-href="refund.get_portal_url(report_type='xml', download=True)"
                                    style="color: green; font-weight: bold;"></a>
                                </t>
                                <t t-else="">
                                    <span class="fa fa-file-code-o fa-lg"
                                        style="color: gray; opacity: 0.5; cursor: not-allowed;"></span>
                                </t>
                            </span>
                        </td>
                    </tr>
                </t>
            </tbody>
        </t>
        <!-- </div> -->

        <!-- Vista KANBAN para móviles -->
        <!-- <t t-call="electronic_document_portal.kanban_template_refund"/> -->
      </t>
    </template>

</odoo>
