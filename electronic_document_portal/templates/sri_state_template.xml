<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TEMPLATE PARA LOS ESTADOS DEL SRI -->
    <template id="sri_state_template" name="Template Estados SRI">
        <t t-if="state_sri == 'draft'">
            <span class="badge badge-success text-bg-info w-75">
                <span class="d-none d-md-inline"> Creado</span>
            </span>
        </t>

        <t t-if="state_sri == 'signed'">
            <span class="badge badge-success text-bg-primary w-75">
                <span class="d-none d-md-inline"> Firmado</span>
            </span>
        </t>

        <t t-if="state_sri == 'waiting'">
            <span class="badge badge-success text-bg-secondary w-75">
                <span class="d-none d-md-inline"> En espera de autorizaci√≥n</span>
            </span>
        </t>

        <t t-if="state_sri == 'authorized'">
            <span class="badge badge-success text-bg-success w-75">
                <span class="d-none d-md-inline"> Autorizado</span>
            </span>
        </t>

        <t t-if="state_sri == 'returned'">
            <span class="badge badge-success text-bg-warning w-75">
                <span class="d-none d-md-inline"> Devuelto</span>
            </span>
        </t>

        <t t-if="state_sri == 'rejected'">
            <span class="badge badge-success text-bg-danger w-75">
                <span class="d-none d-md-inline"> No autorizado</span>
            </span>
        </t>

        <t t-if="state_sri == 'cancel'">
            <span class="badge badge-success text-bg-dark w-75">
                <span class="d-none d-md-inline"> Cancelado</span>
            </span>
        </t>
    </template>

    <!-- TEMPLATE PARA LOS ESTADOS DE EMAIL -->
    <template id="email_state_template" name="Template Estados de Email">
        <t t-if="is_sent">
            <span class="fa fa-envelope-open text-success" title="Correo enviado üòä"/>
        </t>
        <t t-else="">
            <span class="fa fa-envelope text-danger" title="Correo no enviado üòü"/>
        </t>
    </template>
    

</odoo>
