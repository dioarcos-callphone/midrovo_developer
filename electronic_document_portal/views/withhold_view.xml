<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="account_withhold_view_form_inherit" model="ir.ui.view">
            <field name="name">account.withhold.view.form.inherit</field>
            <field name="model">account.withhold</field>
            <field name="inherit_id" ref="ec_withholding.view_account_retention_purchase_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="attributes">
                    <attribute name="groups">!electronic_document_portal.portal_user_internal_group</attribute>
                </xpath>
                <xpath expr="//header" position="after">
                    <header groups='electronic_document_portal.portal_user_internal_group'>
                        <button name="action_withhold_sent" type="object"
							string="Enviar e Imprimir" states="posted"
							class="oe_highlight o_invoice_send" groups="base.group_user" />
                        <button name="print_document"
							string="Imprimir Retención" type="object" icon="fa-print" states="posted" />
						<field name="state" widget="statusbar"
							statusbar_visible="draft,posted" />
                    </header>
                </xpath>
                <xpath expr="//button[@name='action_withhold_sent']" position="inside">
                    <button name="action_withhold_sent" type="object"
							string="Enviar e Imprimir" states="posted"
							class="oe_highlight o_invoice_send" groups="base.group_user" />
                </xpath>
            </field>
        </record>

        <record id="account_retention_form_view_inherit" model="ir.ui.view">
            <field name="name">account.retention.form.view.inherit</field>
            <field name="model">account.withhold</field>
            <field name="inherit_id" ref="ec_account_edi.account_retention_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[./field[@name='state_sri']]" position="replace">
                    <page name="page_xml_data" string="Documento Electrónico">
						<header class="border-bottom-0">
                            <button 
                                name="send_sri" 
                                class="oe_highlight" 
                                string="Enviar al SRI" 
                                type="object"
                                attrs="{'invisible': [('state_sri', '!=', 'signed')]}"/>
                            <field name="state_sri" widget="statusbar" statusbar_visible="authorized,returned,waiting,rejected"/>
                        </header>
                        <form>
                            <group>
                                <field name="xml_data_id" invisible="1" />
                                <field name="new_xml_key" invisible="1"/>
                                <field name="xml_key" readonly="1"/>
                                <field name="authorization_date" readonly="1"/>
                                <field name="xml_report" filename="xml_name" readonly="1"/>
                                <field name="xml_authorized" filename="xml_name" readonly="1"/>
                                <field name="xml_name" invisible="1"/>
                            </group>
                        </form>
                        <notebook>
                            <page name="xml_messages" string="Información SRI">
                                <field name="sri_message_ids">
                                    <tree string="Mensajes Informativos">
                                        <field name="message_type" />
                                        <field name="message" />
                                        <field name="other_info" />
                                        <field name="create_date" />
                                        <field name="write_date" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
					</page>
                </xpath>
            </field>
        </record>
    
    </data>
    

</odoo>
