<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- N O T A S  D E  D E B I T O  -->
    <template id="portal_my_debit_notes" name="Mis Notas de Débito">
      <t t-call="portal.portal_layout">
        <t t-set="breadcrumbs_searchbar" t-value="True"/>

        <t t-call="portal.portal_searchbar">
            <t t-set="title">Notas de Débito</t>
        </t>
        <t t-if="not debit_notes">
             <div class="alert alert-info text-center" style="margin: 20px; padding: 15px; border-radius: 10px;">
                <i class="fa fa-info-circle" style="font-size: 24px; margin-bottom: 10px;"></i>
                <h4>No hay notas de débito disponibles</h4>
                <p>Parece que no tienes notas de débito asociadas a tu cuenta en este momento.</p>
                <a href="/my/home" class="btn btn-primary" style="margin-top: 10px;">Volver al Panel</a>
            </div>
            <!-- <p style="margin:7px 10px; padding:5px;">Actualmente no hay notas de crédito para su cuenta.</p> -->
        </t>
        <t t-if="debit_notes" t-call="portal.portal_table">
            <thead>
                <tr class="active">
                    <th>Nota de débito #</th>
                    <th>Fecha de vencimiento</th>
                    <th class="text-center">Estado</th>
                    <th class='text-center'>Impuestos no incluidos</th>
                    <th class="text-end">Total</th>
                    <th class="text-end">Total en moneda</th>                    
                    <th class="text-center"><span class="fa fa-download fa-lg"></span></th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="debit_notes" t-as="debit_note">
                    <tr>
                        <td>
                            <a t-att-href="debit_note.get_portal_url()" t-att-title="debit_note.name">
                                <t t-out="debit_note.name" t-if="debit_note.name != '/'"/>
                                <em t-else="">Borrador de notas de débito</em>
                            </a>
                        </td>
                        <td><span t-field="debit_note.invoice_date_due"/></td>
                        <td class="tx_status text-center">
                            <t t-if="debit_note.state == 'posted' and debit_note.payment_state not in ('in_payment', 'paid', 'reversed')">
                                <span class="badge rounded-pill text-bg-info"><i class="fa fa-fw fa-clock-o" aria-label="Opened" title="Opened" role="img"></i><span class="d-none d-md-inline"> Esperando pago</span></span>
                            </t>
                            <t t-if="debit_note.state == 'posted' and debit_note.payment_state in ('paid', 'in_payment')">
                                <span class="badge rounded-pill text-bg-success"><i class="fa fa-fw fa-check" aria-label="Paid" title="Paid" role="img"></i><span class="d-none d-md-inline"> Pagado</span></span>
                            </t>
                            <t t-if="debit_note.state == 'posted' and debit_note.payment_state == 'reversed'">
                                <span class="badge rounded-pill text-bg-success"><i class="fa fa-fw fa-check" aria-label="Reversed" title="Reversed" role="img"></i><span class="d-none d-md-inline"> Invertido</span></span>
                            </t>
                            <t t-if="debit_note.state == 'cancel'">
                                <span class="badge rounded-pill text-bg-warning"><i class="fa fa-fw fa-remove" aria-label="Cancelled" title="Cancelled" role="img"></i><span class="d-none d-md-inline"> Cancelado</span></span>
                            </t>
                        </td>
                        <td class="text-end"><span t-out="debit_note.amount_untaxed_signed" t-options='{"widget": "monetary", "display_currency": debit_note.currency_id}'/></td>
                        <td class="text-end"><span t-out="debit_note.amount_total_signed" t-options='{"widget": "monetary", "display_currency": debit_note.currency_id}'/></td>
                        <td class="text-end"><span t-out="debit_note.amount_total_in_currency_signed" t-options='{"widget": "monetary", "display_currency": debit_note.currency_id}'/></td>
                        <td class="text-center">
                            <span class="pdf-icon" style="margin: 5px;">
                                <a class="fa fa-file-pdf-o fa-lg" t-att-href="debit_note.get_portal_url(report_type='pdf', download=True)" style="color: red; font-weight: bold;"></a>
                            </span>
                            <span class="xml-icon" style="margin: 5px;">
                                <a class="fa fa-file-code-o fa-lg" t-att-href="debit_note.get_portal_url(report_type='xml', download=True)" style="color: green; font-weight: bold;"></a>
                            </span>
                        </td>
                    </tr>
                </t>
            </tbody>
        </t>
      </t>
    </template>

</odoo>
