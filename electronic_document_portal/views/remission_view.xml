<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="account_remision_view_form_inherit" model="ir.ui.view">
            <field name="name">account.remision.view.form.inherit</field>
            <field name="model">account.remision</field>
            <field name="inherit_id" ref="ec_account_edi.account_remision_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="attributes">
                    <attribute name="groups">!electronic_document_portal.portal_user_internal_group</attribute>
                </xpath>
                <xpath expr="//header" position="after">
                    <header groups='electronic_document_portal.portal_user_internal_group'>
                        <button name="action_remission_sent"
                                type="object"
                                string="Enviar e Imprimir"
                                attrs="{'invisible':[('state', '!=', 'posted')]}"
                                class="oe_highlight"
                                data-hotkey="y"/>
						<field name="state" widget="statusbar" />
                    </header>
                </xpath>
                <xpath expr="//button[@name='%(ec_account_edi.e_delivery_note_qweb)d']" position="after">
                    <button name="action_remission_sent"
                                type="object"
                                string="Enviar e Imprimir"
                                attrs="{'invisible':[('state', '!=', 'posted')]}"
                                class="oe_highlight"
                                data-hotkey="y"/>
                </xpath>

                <xpath expr="//page[./group/field[@name='xml_key']]" position="replace">
                    <page name="page_xml_data" string="Documento Electrónico">
						<header class="border-bottom-0">
                            <button 
                                name="send_sri" 
                                class="oe_highlight" 
                                string="Enviar al SRI" 
                                type="object"
                                attrs="{'invisible': [('state_sri', '!=', 'signed')]}"/>
                            <field name="state_sri" widget="statusbar" statusbar_visible="authorized,returned,waiting,rejected"/>
                        </header>
                        <form>
                            <group>
                                <field name="xml_key" attrs="{'readonly': [('authorization_date', '!=', False)]}"/>
                                <field name="authorization_date" readonly="1"/>
                                <field name="xml_report" filename="xml_name"/>
                                <field name="xml_authorized" filename="xml_name"/>
                                <field name="xml_name" invisible="1"/>
                            </group>
                        </form>
                        <notebook>
                            <page name="xml_messages" string="Información SRI">
                                <field name="sri_message_ids">
                                    <tree string="Mensajes Informativos">
                                        <field name="message_type" />
                                        <field name="message" />
                                        <field name="other_info" />
                                        <field name="create_date" />
                                        <field name="write_date" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
					</page>
                </xpath>
            </field>
        </record>
    
    </data>
    

</odoo>
