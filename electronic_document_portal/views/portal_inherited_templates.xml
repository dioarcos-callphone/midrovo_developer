    <template id="portal_invoice_page_inherit_payment" name="template_name" inherit_id="account_payment.portal_invoice_page_inherit_payment">
        <xpath expr="//div[@class='d-grid']" position="attributes">
            <attribute name="class">d-none</attribute>
        </xpath>
    </template>

    <template id="portal_invoice_page" name="template_name" inherit_id="account.portal_invoice_page">
        <xpath expr="//div[@class='o_download_pdf btn-toolbar flex-sm-nowrap']" position="replace">
            <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                <div class="btn-group  flex-grow-1 me-1 mb-1">
                    <a class="btn btn-danger btn-block o_download_btn" t-att-href="invoice.get_portal_url(report_type='pdf', download=True)" title="RIDE"><i class="fa fa-download"/> RIDE</a>
                </div>
                <div class="btn-group  flex-grow-1 me-1 mb-1">
                    <a class="btn btn-success btn-block o_download_btn" t-att-href="invoice.get_portal_url(report_type='xml', download=True)" title="XML"><i class="fa fa-download"/> XML</a>
                </div>
                <div class="btn-group flex-grow-1 mb-1">
                    <a class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print" t-att-href="invoice.get_portal_url(report_type='pdf')" id="print_invoice_report" title="Print" target="_blank"><i class="fa fa-print"/> Print</a>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[@class='small']" position="attributes">
            <attribute name="class">d-none</attribute>
        </xpath>

        <xpath expr="//li[@t-if='invoice.invoice_user_id']" position="attributes">
            <attribute name="class">d-none</attribute>
        </xpath>

        <xpath expr="//div[@id='invoice_communication']" position="attributes">
            <attribute name="class">d-none</attribute>
        </xpath>
    </template>

    <template id="portal_my_home_refund" name="Mostrar Notas de Credito" inherit_id="portal.portal_my_home" customize_show="True" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Notas de Crédito</t>
                <t t-set="url" t-value="'/my/refunds'"/>
                <t t-set="placeholder_count" t-value="'refund_count'"/>
            </t>
        </xpath>

        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Retenciones</t>
                <t t-set="url" t-value="'/my/withholding'"/>
                <t t-set="placeholder_count" t-value="'withholding_count'"/>
            </t>
        </xpath>

        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Guías de remisión</t>
                <t t-set="url" t-value="'/my/shipping_guide'"/>
                <t t-set="placeholder_count" t-value="'shipping_guide_count'"/>
            </t>
        </xpath>

        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Liquidaciones de compra</t>
                <t t-set="url" t-value="'/my/liquidations'"/>
                <t t-set="placeholder_count" t-value="'liquidation_count'"/>
            </t>
        </xpath>

        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Notas de Débito</t>
                <t t-set="url" t-value="'/my/debit_notes'"/>
                <t t-set="placeholder_count" t-value="'debit_note_count'"/>
            </t>
        </xpath>
    </template>

