<odoo>
    <template id="report_invoice_note" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='informations']" position="before">
            <table class="table table-sm table-borderless col-sm-7 col-md-6" style="page-break-inside: avoid">
                <tbody>
                    <tr>
                        <td>
                            <span style="font-weight: bold;">Email:</span>
                        </td>
                        <td>
                            <span>midrovo@outlook.com</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </xpath>
        <xpath expr="//div[@t-if='not is_html_empty(o.narration)']" position="replace">
            <!-- Puedes agregar attrs para ocultar la secciÃ³n -->
            <!-- <attribute name="t-if">False</attribute> -->
            <t t-if="'http' not in o.narration">
                <span style="font-weight: bold;">Nota:</span>
                <t t-esc="o.narration"/>
            </t>
        </xpath>
    </template>
</odoo>