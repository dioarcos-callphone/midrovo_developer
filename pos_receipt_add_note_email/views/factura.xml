<odoo>
    <template id="report_invoice_note" inherit_id="account.report_invoice_document">
        <xpath expr="//p[@name='payment_communication']" position="attributes">
            <attribute name="t-if">o.l10n_latam_document_type_id</attribute>
        </xpath>
        <xpath expr="//div[@name='payment_term']" position="attributes">
            <attribute name="t-if">o.l10n_latam_document_type_id</attribute>
        </xpath>
        <xpath expr="//p[@name='note']" position="attributes">
            <attribute name="t-if">o.l10n_latam_document_type_id</attribute>
        </xpath>
    </template>
</odoo>