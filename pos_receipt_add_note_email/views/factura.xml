<odoo>
    <data>
        <!-- ModificaciÃ³n en la vista de formulario existente para ocultar el campo 'narration' -->
        <record id="account_move_form_invoice_and_withhold_view" model="ir.ui.view">
            <field name="name">account.move.form.invoice.and.withhold.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="l10n_latam_invoice_document.view_move_form"/>
            <field name="arch" type="xml">
                <!-- XPath para localizar el campo 'narration' y hacerlo invisible -->
                <xpath expr="//field[@name='narration']" position="attributes">
                    <attribute name="attrs">{'invisible': [('l10n_ec_withhold_type', 'not in', ['out_withhold', 'in_withhold'])]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
