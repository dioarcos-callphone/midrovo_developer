<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="wizard_messages_form_view">
			<field name="name">wizard.messages.form</field>
			<field name="model">wizard.messages</field>
			<field name="arch" type="xml">
				<form string="Mensaje">
					<sheet>
						<field name="message" widget="html" colspan="4"/>
					</sheet>
					<footer>
						<div class="oe_left">
							<button string="Continuar" special="cancel" type="object"
								icon="fa-check" />
						</div>
					</footer>
				</form>
			</field>
		</record>

	</data>
</odoo>