<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Crea el partner, precio segun la company valor 1 -->
        <record id="balance_portfolio_cron" model="ir.cron">
            <field name="name">balance_portfolio_cron</field>
            <field name="model_id" ref="balance_portfolio.model_balance_portfolio"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="state">code</field>
            <field name="code">model._balance_portfolio_partner_api(1)</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 03:10:59')" />
            <field name="priority">50</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
        <!-- Crea el saldo de cartera por cliente -->
        <record id="balance_portfolio_lines_all_cron" model="ir.cron">
            <field name="name">balance.portfolio.lines.all.cron</field>
            <field name="model_id" ref="balance_portfolio.model_balance_portfolio"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="state">code</field>
            <field name="code">model._crete_balance_portfolio_all(1)</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 04:10:59')" />
            <field name="priority">50</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
