<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="portfolio_balancer_res_users_form_view" model="ir.ui.view">
        <field name="name">res.users.portfolio.balance.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='preferences']" position="after">
                <group string="Saldo de Cartera" name="portfolio_balance">
                    <field name="balance_code"  />
                </group>
            </xpath>
        </field>
    </record>

</odoo>