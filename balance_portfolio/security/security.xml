            <field name="name">rule.balance.portfolio.limit</field>
            <field name="model_id" ref="model_balance_portfolio_line"/>
            <field name="groups" eval="[(4, ref('balance_portfolio.group_balance_portfolio_restringido'))]"/>
            <field name="domain_force">['|',('id', '=', user.id),('id', '!=', False),('client_id.user_id','=',user.id),('status','=','A')]</field>
        </record> -->

    </data>
</odoo>