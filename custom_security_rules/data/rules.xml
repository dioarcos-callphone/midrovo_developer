<odoo>
    <record id="no_edit_delete_sale_order_rule" model="ir.rule">
        <field name="name">Permisos en Sales Orders</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_no_edit_delete'))]"/> <!-- Solo afecta al grupo restringido -->
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="no_edit_delete_sale_order_line_rule" model="ir.rule">
        <field name="name">Permisos en Sales Order Lines</field>
        <field name="model_id" ref="sale.model_sale_order_line"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_no_edit_delete'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="no_edit_res_partner_rule" model="ir.rule">
        <field name="name">Permisos en Contacts</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[(1, '=', 1)]</field> <!-- Permite acceder a todos los registros -->
        <field name="groups" eval="[(6, ref('group_no_edit_delete'))]"/> <!-- Afecta solo al grupo restringido -->
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/> <!-- No permite la ediciÃ³n -->
        <field name="perm_unlink" eval="False"/> <!-- No permite eliminar -->
    </record>
</odoo>
