<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="web.FormStatusIndicator" t-inherit-mode="extension" owl="1">
        <!-- Extender la parte de los botones de guardado y cancelación -->
        <xpath expr="//div[contains(@class, 'o_form_status_indicator_buttons')]" position="attributes">
            <!-- Agregamos la condición para que los botones solo sean visibles para el grupo específico -->
            <attribute name="t-if">user.has_group('custom_security_rules.group_custom_security_role_user')</attribute>
        </xpath>
    </t>
</templates>
