<odoo>
    <data>
        <template id="inherit_form_status_indicator" inherit_id="web.FormStatusIndicator">
            <xpath expr="//div[@class='o_form_status_indicator_buttons']" position="replace">
                <div class="o_form_status_indicator_buttons d-flex" t-att-class="{ invisible: !(props.model.root.isVirtual or displayButtons) }">
                    <t t-component="custom_security_rules.CustomFormStatusIndicator" 
                       t-props="{
                           model: props.model,
                           save: props.save,
                           discard: props.discard,
                           isDisabled: props.isDisabled,
                           fieldIsDirty: props.fieldIsDirty,
                       }"/>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
