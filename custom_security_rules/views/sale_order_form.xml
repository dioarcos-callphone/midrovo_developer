<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_inherit_view_form" model="ir.ui.view">
            <field name="name">sale.order.inherit.view.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="replace">
                    <field name="price_unit" string="Precio Unitario" readonly="1" attrs="{'readonly': [('qty_invoiced', '&gt;', 0)]}" groups="custom_security_rules.group_custom_security_role_user" />
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="price_unit" string="Precio Unitario" attrs="{'readonly': [('qty_invoiced', '&gt;', 0)]}" groups="!custom_security_rules.group_custom_security_role_user" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>