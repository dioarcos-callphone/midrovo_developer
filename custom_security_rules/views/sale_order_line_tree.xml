<odoo>
    <data>
        <!-- Herencia de la vista sale.view_order_form -->
        <record id="custom_sale_order_form_view" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.price.unit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="user_id" invisible="1"/>
                </xpath>
                <xpath expr="//tree/field[@name='price_unit']" position="replace">
                    <field name="price_unit" 
                           attrs="{'readonly': [('id', '!=', False), ('user_id', 'not in', [user.id for user in env['res.groups'].search([('name', '=', 'custom_security_rules.group_custom_security_role_user')]).users])]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
