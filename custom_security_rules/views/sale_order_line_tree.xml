<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="sale_order_line_tree" model="ir.ui.view">
            <field name="name">sale.order.line.tree</field>
            <field name="model">sale.stock</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock_qty" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='price_unit']" position="replace">
                    <field name="price_unit" attrs="{'readonly': [('price_unit_readonly', '=', True)]}"/>
                </xpath>
            </field>
        </record>
    
    </data>
    
</odoo>