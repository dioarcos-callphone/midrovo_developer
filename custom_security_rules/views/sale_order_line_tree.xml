<odoo>
    <data>
        <!-- Herencia de la vista sale.view_order_form -->
        <record id="custom_sale_order_form_view" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.price.unit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//field[@name='price_unit']" position="attributes">
                    <attribute name="attrs">{'readonly': [('qty_invoiced', '&gt;', 0), ('user_id.group_custom_security_role_user', '=', True)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
