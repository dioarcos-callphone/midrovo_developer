<!-- pos_customer_validated/views/partner_details_edit.xml -->
<odoo>
    <template id="partner_details_edit" name="pos_customer_validated assets" inherit_id="point_of_sale.assets">
        <xpath expr="." position="inside">
            <xpath expr="//template[@id='PartnerDetailsEdit']" position="replace">
                <template id="PartnerDetailsEdit" name="Partner Details Edit">
                    <!-- Aquí puedes modificar el contenido del formulario -->
                    <div>
                        <!-- Ejemplo de cómo cambiar los nombres de los campos -->
                        <label for="name">Nuevo Nombre</label>
                        <input type="text" id="name" name="name" />
                        <!-- Repite esto para los otros campos -->
                    </div>
                </template>
            </xpath>
        </xpath>
    </template>
</odoo>
