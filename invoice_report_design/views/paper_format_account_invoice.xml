<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="paperformat_account_invoice" model="report.paperformat" >
            <field name="name">Formato para las facturas</field>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="default" eval="False" />
            <field name="margin_top" eval="30" />
            <field name="margin_right" eval="5" />
            <field name="margin_bottom" eval="30" />
            <field name="margin_left" eval="5" />
            <field name="header_line" eval="True" />
            <field name="header_spacing" eval="10" />
            <field name="report_ids" eval="[(4, ref('account.account_invoices'))]" />
        </record>
    </data>
</odoo>