<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="portal_my_invoices_inherit" name="My Invoices and Payments Inherit" inherit_id="account.portal_my_invoices">
        <xpath expr="//th[@class='text-end']" position="after">
            <th class="text-center">
                Reporte
            </th>
        </xpath>
        <xpath expr="//td[@class='text-end']" position="after">
            <td class="text-center">
                <span class="pdf-icon" style="margin: 5px;">
                    <a class="fa fa-file-pdf-o fa-lg" t-att-href="#" style="color: red; font-weight: bold;"></a>
                </span>
                <span class="xml-icon" style="margin: 5px;">
                    <a class="fa fa-file-code-o fa-lg" t-att-href="#" style="color: green; font-weight: bold;"></a>
                </span>
            </td>
        </xpath>
    </template>
</odoo>