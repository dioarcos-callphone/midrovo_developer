<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- TEMPLATES QUE HEREDAN DEL MODULO PORTAL -->
    <template id="portal_my_home_refund" name="Mostrar Notas de Credito" inherit_id="portal.portal_my_home" customize_show="True" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Notas de Crédito</t>
                <t t-set="url" t-value="'/my/refund'"/>
                <t t-set="placeholder_count" t-value="'refund_count'"/>
            </t>
        </xpath>

        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Retenciones</t>
                <t t-set="url" t-value="'/my/withholding'"/>
                <t t-set="placeholder_count" t-value="'withholdings_count'"/>
            </t>
        </xpath>
    </template>

    <!-- ...................... -->

    <!-- TEMPLATES QUE HEREDAN DEL MODULO SALE -->
    <template id="portal_my_quotations_inh" name="Mis Cotizaciones" inherit_id="sale.portal_my_quotations">
        <xpath expr="//p[@t-else]" position="replace">
            <t t-else="">
                <div class="alert alert-info text-center" style="margin: 20px; padding: 15px; border-radius: 10px;">
                    <i class="fa fa-info-circle" style="font-size: 24px; margin-bottom: 10px;"></i>
                    <h4>No hay cotizaciones disponibles</h4>
                    <p>Parece que no tienes cotizaciones asociadas a tu cuenta en este momento.</p>
                    <a href="/my/home" class="btn btn-primary" style="margin-top: 10px;">Volver al Panel</a>
                </div>
            </t>
        </xpath>
    </template>

    <template id="portal_my_orders_inh" name="Mis Ordenes" inherit_id="sale.portal_my_orders">
        <xpath expr="//p[@t-else]" position="replace">
