<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <!-- SE ESTABLECE UN DOMAIN EN EMISION POR DEFECTO, SI EL USUARIO TIENE UNO O VARIOS ESTABLECIMIENTOS
        ENTONCES SE MUESTRAN LOS PUNTOS DE EMISION DE CADA ESTABLECIMIENTO Y SOLO PERMITE SELECCIONAR UNO -->

        <record id="res_user_multi_form_extend_view" model="ir.ui.view">
            <field name="name">res.user.multi.form.extend.view</field>
            <field name="model">res.users</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="ec_sri_authorizathions.res_user_multi_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='printer_default_id']" position="replace">
                    <field
                        name="printer_default_id"
                        colspan="4"
                        options="{'no_create': True}"
                        domain="[('shop_id', 'in', shop_ids)]"
                        />
                </xpath>
            </field>
        </record>
    
    </data>
    
</odoo>