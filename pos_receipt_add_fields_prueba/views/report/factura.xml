<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//field[@name='vendedor']" position="replace">
            <t t-if="o.invoice_origin">
                <t t-set="order" t-value="env['pos.order'].search([('name', '=', o.invoice_origin)], limit=1)"/>
                <t t-if="order">
                    <t t-set="session" t-value="order.session_id"/>
                    <t t-if="session">
                        <t t-esc="session.user_id.name"/>
                    </t>
                </t>
            </t>
        </xpath>
    </template>
</odoo>
