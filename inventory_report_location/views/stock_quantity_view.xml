<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_quantity_view_tree" model="ir.ui.view">
        <field name="name">stock.quantity.view.tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.view_stock_product_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree/header" position="inside">
                <button name="action_pdf"
                        string="PDF"
                        type="object"
                        class="btn btn-primary"                     
                        icon="fa-check"/>
            </xpath>
        </field>
    </record>

    <record id="stock_quantity_view_search" model="ir.ui.view">
        <field name="name">stock.quantity.view.search</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view" />
        <field name="arch" type="xml">
            <search>
                <filter name="qty_available" string="Cantidad a mano" domain="[('qty_available', '!=', 0)]"/>
            </search>
        </field>
    </record>

    <record id="view_custom_list_inherit" model="ir.ui.view">
        <field name="name">custom.list.view.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="web.ListView.Buttons"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_list_buttons']" position="inside">
                <button type="button" class="btn btn-info o_list_button_pdf" 
                        t-on-click="onClickGeneratePdf" 
                        title="Generate PDF">
                    PDF
                </button>
            </xpath>
        </field>
    </record>

</odoo>
